# Note: 'version' attribute removed - obsolete in Docker Compose v2+
services:
  app:
    build: .
    ports:
      - "{{ port | default(8000) }}:{{ port | default(8000) }}"
    environment:
      - DATABASE_URL={{ database_url | default('postgresql://user:password@db:5432/dbname') }}
      - ENVIRONMENT={{ environment | default('development') }}
    depends_on:
      - db
    volumes:
      - .:/app
    command: uvicorn {{ main_module | default('main') }}:app --host 0.0.0.0 --port {{ port | default(8000) }} --reload

  db:
    image: postgres:15-alpine
    environment:
      - POSTGRES_USER={{ db_user | default('user') }}
      - POSTGRES_PASSWORD={{ db_password | default('password') }}
      - POSTGRES_DB={{ db_name | default('dbname') }}
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data:
