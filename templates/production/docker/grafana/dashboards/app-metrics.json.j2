{
  "dashboard": {
    "id": null,
    "uid": "{{ app_name }}-metrics",
    "title": "{{ app_name }} - Application Metrics",
    "description": "Production metrics dashboard for {{ app_name }} service",
    "tags": ["{{ app_name }}", "{{ service_name }}", "production"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "hide": 0,
          "refresh": 1,
          "regex": "",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"{{ service_name }}\"}, instance)",
          "hide": 0,
          "refresh": 2,
          "regex": "",
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_namespace_labels, namespace)",
          "hide": 0,
          "refresh": 2,
          "regex": "",
          "current": {
            "text": "default",
            "value": "default"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "type": "stat",
        "title": "Service Status",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "up{job=\"{{ service_name }}\",instance=~\"$instance\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "type": "value",
                "value": "1",
                "text": "UP"
              },
              {
                "type": "value",
                "value": "0",
                "text": "DOWN"
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "unit": "none"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "type": "stat",
        "title": "Request Rate",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "type": "stat",
        "title": "Error Rate",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"{{ service_name }}\",instance=~\"$instance\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "type": "stat",
        "title": "P95 Latency",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "unit": "s"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "type": "graph",
        "title": "HTTP Requests per Second",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) by (method, status)",
            "legendFormat": "{{method}} {{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "alertThreshold": true,
          "legend": {
            "calcs": ["mean", "lastNotNull"],
            "displayMode": "table",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          }
        },
        "yaxes": [
          {
            "format": "reqps",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "type": "graph",
        "title": "Request Duration",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) by (le))",
            "legendFormat": "P90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "D"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "type": "graph",
        "title": "Business Metrics",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "sum(rate(business_events_total{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) by (event_type)",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "yaxes": [
          {
            "format": "short",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "type": "graph",
        "title": "Error Rate by Type",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "sum(rate(errors_total{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) by (error_type, category)",
            "legendFormat": "{{category}}: {{error_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "yaxes": [
          {
            "format": "short",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 20
        },
        "type": "gauge",
        "title": "Database Connections",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "database_connections_active{job=\"{{ service_name }}\",instance=~\"$instance\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 10,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 20
        },
        "type": "gauge",
        "title": "Cache Hit Rate",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "sum(rate(cache_hits_total{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) / (sum(rate(cache_hits_total{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) + sum(rate(cache_misses_total{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "green",
                  "value": 80
                }
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 11,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 20
        },
        "type": "graph",
        "title": "CPU & Memory Usage",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "process_cpu_seconds_total{job=\"{{ service_name }}\",instance=~\"$instance\"}",
            "legendFormat": "CPU Usage",
            "refId": "A"
          },
          {
            "expr": "process_resident_memory_bytes{job=\"{{ service_name }}\",instance=~\"$instance\"} / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "show": true
          },
          {
            "format": "decmbytes",
            "show": true
          }
        ],
        "seriesOverrides": [
          {
            "alias": "Memory (MB)",
            "yaxis": 2
          }
        ]
      },
      {
        "id": 12,
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 28
        },
        "type": "table",
        "title": "Top Endpoints by Request Count",
        "datasource": "${datasource}",
        "targets": [
          {
            "expr": "topk(10, sum(rate(http_requests_total{job=\"{{ service_name }}\",instance=~\"$instance\"}[5m])) by (method, endpoint, status))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "Requests/sec"
                },
                {
                  "id": "unit",
                  "value": "reqps"
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "footer": {
            "show": false
          }
        }
      }
    ]
  }
}