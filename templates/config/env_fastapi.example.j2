# Database Configuration
DATABASE_URL={{ database_url | default('postgresql://user:password@localhost:5432/dbname') }}

# Application Configuration
ENVIRONMENT={{ environment | default('development') }}
DEBUG={{ debug | default('true') }}
PORT={{ port | default(8000) }}

# Security
SECRET_KEY={{ secret_key | default('your-secret-key-here-change-in-production') }}
JWT_SECRET={{ jwt_secret | default('your-jwt-secret-here-change-in-production') }}
JWT_ALGORITHM={{ jwt_algorithm | default('HS256') }}
ACCESS_TOKEN_EXPIRE_MINUTES={{ token_expire | default(30) }}

# CORS
CORS_ORIGINS={{ cors_origins | default('http://localhost:3000,http://localhost:8000') }}

# API Keys (if needed)
{% if api_keys %}
{% for key, value in api_keys.items() %}
{{ key }}={{ value }}
{% endfor %}
{% endif %}
