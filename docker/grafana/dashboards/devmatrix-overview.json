{
  "dashboard": {
    "title": "DevMatrix Overview",
    "tags": ["devmatrix", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "API Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"api\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "API Response Time",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"api\"}[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{service=\"api\"}[5m]))",
            "legendFormat": "p50"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "type": "stat",
        "title": "Total Requests",
        "targets": [
          {
            "expr": "sum(http_requests_total{service=\"api\"})"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8},
        "type": "stat",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"api\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{service=\"api\"}[5m])) * 100"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "type": "stat",
        "title": "Active Code Generations",
        "targets": [
          {
            "expr": "devmatrix_active_generations"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "type": "stat",
        "title": "RAG Cache Hit Rate",
        "targets": [
          {
            "expr": "rate(devmatrix_rag_cache_hits[5m]) / (rate(devmatrix_rag_cache_hits[5m]) + rate(devmatrix_rag_cache_misses[5m])) * 100"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "graph",
        "title": "PostgreSQL Connections",
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "Active Connections"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "graph",
        "title": "Redis Memory Usage",
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "legendFormat": "Used Memory"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "type": "graph",
        "title": "LLM API Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(devmatrix_llm_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 Anthropic"
          },
          {
            "expr": "histogram_quantile(0.50, rate(devmatrix_llm_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50 Anthropic"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "type": "graph",
        "title": "Token Usage",
        "targets": [
          {
            "expr": "rate(devmatrix_tokens_total{type=\"input\"}[5m])",
            "legendFormat": "Input Tokens/sec"
          },
          {
            "expr": "rate(devmatrix_tokens_total{type=\"output\"}[5m])",
            "legendFormat": "Output Tokens/sec"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Tokens/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "type": "graph",
        "title": "RAG Retrieval Performance",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(devmatrix_rag_retrieval_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 Retrieval Time"
          },
          {
            "expr": "rate(devmatrix_rag_retrievals_total[5m])",
            "legendFormat": "Retrievals/sec"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "type": "graph",
        "title": "Workspace Operations",
        "targets": [
          {
            "expr": "rate(devmatrix_workspace_operations_total{operation=\"write\"}[5m])",
            "legendFormat": "File Writes"
          },
          {
            "expr": "rate(devmatrix_workspace_operations_total{operation=\"read\"}[5m])",
            "legendFormat": "File Reads"
          },
          {
            "expr": "rate(devmatrix_workspace_operations_total{operation=\"commit\"}[5m])",
            "legendFormat": "Git Commits"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    }
  }
}
