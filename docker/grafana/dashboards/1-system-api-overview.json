{
  "title": "1. System + API Overview",
  "tags": [
    "devmatrix",
    "api",
    "websocket",
    "system"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}} ({{status}})"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "Requests/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "title": "HTTP Response Time (p95 / p50)",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 0
      },
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p50"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 3,
      "title": "Error Rate %",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 0
      },
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(http_errors_total{error_type=\"server_error\"}[5m])) / sum(rate(http_requests_total[5m])) * 100",
          "legendFormat": "5xx Server Errors"
        },
        {
          "expr": "sum(rate(http_errors_total{error_type=\"client_error\"}[5m])) / sum(rate(http_requests_total[5m])) * 100",
          "legendFormat": "4xx Client Errors"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "Error %"
        },
        {
          "format": "short"
        }
      ],
      "thresholds": [
        {
          "value": 1,
          "colorMode": "critical",
          "fill": true,
          "line": true,
          "op": "gt"
        }
      ]
    },
    {
      "id": 4,
      "title": "Active WebSocket Connections",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 8
      },
      "type": "stat",
      "targets": [
        {
          "expr": "websocket_connections_active"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "WebSocket Message Rate",
      "gridPos": {
        "h": 8,
        "w": 10,
        "x": 6,
        "y": 8
      },
      "type": "graph",
      "targets": [
        {
          "expr": "rate(websocket_messages_total{direction=\"sent\"}[5m])",
          "legendFormat": "Sent"
        },
        {
          "expr": "rate(websocket_messages_total{direction=\"received\"}[5m])",
          "legendFormat": "Received"
        }
      ],
      "yaxes": [
        {
          "format": "msg/s",
          "label": "Messages/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 6,
      "title": "WebSocket Errors",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 8
      },
      "type": "stat",
      "targets": [
        {
          "expr": "sum(websocket_errors_total)"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "HTTP Requests In Progress",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 16
      },
      "type": "stat",
      "targets": [
        {
          "expr": "http_requests_in_progress"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 8,
      "title": "Total HTTP Requests",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 16
      },
      "type": "stat",
      "targets": [
        {
          "expr": "sum(http_requests_total)"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 9,
      "title": "Requests by Status Code",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "type": "piechart",
      "targets": [
        {
          "expr": "sum by (status) (http_requests_total)",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "id": 10,
      "title": "Top 10 Endpoints by Request Count",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      },
      "type": "table",
      "targets": [
        {
          "expr": "topk(10, sum by (endpoint, method) (rate(http_requests_total[5m])))",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "endpoint": "Endpoint",
              "method": "Method",
              "Value": "Requests/sec"
            }
          }
        }
      ]
    },
    {
      "id": 11,
      "title": "Slowest Endpoints (p95 latency)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "type": "table",
      "targets": [
        {
          "expr": "topk(10, histogram_quantile(0.95, sum by (endpoint, method, le) (rate(http_request_duration_seconds_bucket[5m]))))",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "endpoint": "Endpoint",
              "method": "Method",
              "Value": "p95 Duration (s)"
            }
          }
        }
      ]
    },
    {
      "id": 12,
      "title": "WebSocket Message Processing Time",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 32
      },
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(websocket_message_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.50, rate(websocket_message_duration_seconds_bucket[5m]))",
          "legendFormat": "p50"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 13,
      "title": "Workspace Operations Rate",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 32
      },
      "type": "graph",
      "targets": [
        {
          "expr": "sum by (operation, result) (rate(websocket_workspace_operations_total[5m]))",
          "legendFormat": "{{operation}} ({{result}})"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Operations/sec"
        },
        {
          "format": "short"
        }
      ]
    }
  ]
}
